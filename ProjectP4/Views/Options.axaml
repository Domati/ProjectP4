<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
        x:Class="ProjectP4.Views.Options"
        Title="Options">
    
    <StackPanel>
        <!-- top bar -->
        <Grid Background="Red">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center"> Options</Label>
        </Grid>
        <!-- middle bar -->
        <Label>Rows:</Label>
        <DockPanel VerticalAlignment="Center" Margin="10">
            <TextBox Text="" DockPanel.Dock="Right" TextAlignment="Right" Height="5" Width="40" />
            <Slider Maximum="50" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="rows" />
        </DockPanel>
        <Grid>
                        
        </Grid>
        <Label> Dolny Grid</Label>
        <!-- bottom bar -->
        <Grid>
                        
        </Grid>
    </StackPanel>


</Window>
